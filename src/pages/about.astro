---
// by Pawan Kumar Sharma
import BaseLayout from "../layouts/BaseLayout.astro";
import Seo from "../components/Seo.astro";
import aboutData from "../data/about.json";
---

<BaseLayout title={`About AskDevPK | Pawan Kumar Sharma`} description="Learn about Pawan Kumar Sharma (AskDevPK): a Full-Stack Developer skilled in MERN stack, his work style, and technical expertise.">
  <Seo title="About AskDevPK | Pawan Kumar Sharma" description="Learn about Pawan Kumar Sharma (AskDevPK): a Full-Stack Developer skilled in MERN stack, his work style, and technical expertise." />
  
  <section class="max-w-5xl mx-auto px-4 py-16 text-gray-800 dark:text-gray-100">
    
    <!-- Intro -->
    <h1 class="text-4xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">{aboutData.title}</h1>
    <p class="text-lg leading-relaxed mb-12">
      {aboutData.intro}
    </p>

    <!-- Skills -->
    <h2 class="text-2xl font-semibold mt-12 mb-6 text-gray-900 dark:text-white">Skills & Tools</h2>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {aboutData.skills.map(skill => (
        <div class="p-4 bg-gray-100 dark:bg-gray-800 rounded-lg shadow">
          <h3 class="font-semibold mb-3">{skill.title}</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">{skill.items}</p>
        </div>
      ))}
    </div>

    <!-- Personal touch -->
    <h2 class="text-2xl font-semibold mt-12 mb-6 text-gray-900 dark:text-white">{aboutData.beyondCodingTitle}</h2>
    <p class="text-lg leading-relaxed">
      {aboutData.beyondCodingText}
    </p>
  </section>
</BaseLayout>
