---
import BaseLayout from "../layouts/BaseLayout.astro";
import Seo from "../components/Seo.astro";
import projects from "../data/projects.json";
---

<BaseLayout title="AskDevPK Projects | Full-Stack & MERN Developer Portfolio" 
    description="Explore the best web, mobile, and open-source projects built by Pawan Kumar Sharma (AskDevPK) using React, Node.js, and modern tech.">
  <Seo title="AskDevPK Projects | Full-Stack & MERN Developer Portfolio" 
    description="Explore the best web, mobile, and open-source projects built by Pawan Kumar Sharma (AskDevPK) using React, Node.js, and modern tech." />

  <section class="max-w-6xl mx-auto px-4 py-16 text-gray-800 dark:text-gray-100">
    <h1 class="text-4xl font-bold mb-10 text-indigo-600 dark:text-indigo-400">Projects</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition flex flex-col">
          <img src={project.thumbnail} alt={project.title} class="rounded mb-4 w-full h-48 object-cover" loading="lazy" />

          <h2 class="text-xl font-semibold mb-2 text-indigo-500">{project.title}</h2>
          <p class="mb-4 flex-grow">{project.description}</p>

          <div class="flex gap-3 mt-auto">
            <a
              href={project.sourceLink || "#"}
              class={`px-4 py-2 rounded text-sm font-medium ${project.sourceLink 
                ? "bg-indigo-600 text-white hover:bg-indigo-700" 
                : "bg-gray-300 dark:bg-gray-700 text-gray-500 cursor-not-allowed"}`}
              target={project.sourceLink ? "_blank" : "_self"}
            >
              View Source
            </a>

            <a
              href={project.demoLink || "#"}
              class={`px-4 py-2 rounded text-sm font-medium ${project.demoLink 
                ? "bg-green-600 text-white hover:bg-green-700" 
                : "bg-gray-300 dark:bg-gray-700 text-gray-500 cursor-not-allowed"}`}
              target={project.demoLink ? "_blank" : "_self"}
            >
              Live Demo
            </a>
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
