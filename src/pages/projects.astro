---
// by Pawan Kumar Sharma
import BaseLayout from "../layouts/BaseLayout.astro";
import Seo from "../components/Seo.astro";
---

<BaseLayout title="Projects | Pawan Sharma" description="Explore projects by Pawan Sharma - web apps, mobile apps, and open-source contributions.">
  <Seo title="Projects | Pawan Sharma" description="Explore projects by Pawan Sharma - web apps, mobile apps, and open-source contributions." />

  <section class="max-w-6xl mx-auto px-4 py-16 text-gray-800 dark:text-gray-100">
    <h1 class="text-4xl font-bold mb-10 text-indigo-600 dark:text-indigo-400">Projects</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition">
        <h2 class="text-xl font-semibold mb-2 text-indigo-500">Just Download</h2>
        <p class="mb-2">Cross-platform video downloader with support for desktop, mobile, and Chrome extension.</p>
        <a href="https://github.com/itspksharma/just-download" target="_blank" class="text-sm text-indigo-600 dark:text-indigo-400 underline">View Source</a>
      </div>

      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition">
        <h2 class="text-xl font-semibold mb-2 text-indigo-500">My Portfolio</h2>
        <p class="mb-2">This personal developer portfolio website built with Astro and Tailwind CSS.</p>
        <a href="https://itspksharma.github.io/my-portfolio/" target="_blank" class="text-sm text-indigo-600 dark:text-indigo-400 underline">Live Preview</a>
      </div>

      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow hover:shadow-lg transition">
        <h2 class="text-xl font-semibold mb-2 text-indigo-500">Docker Environments</h2>
        <p class="mb-2">Organized Docker setup for various stacks (PHP, Node, Python, etc.) for local development without installing dependencies.</p>
        <a href="https://github.com/itspksharma" target="_blank" class="text-sm text-indigo-600 dark:text-indigo-400 underline">GitHub</a>
      </div>
    </div>
  </section>
</BaseLayout>
