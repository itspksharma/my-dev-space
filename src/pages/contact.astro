---
// by Pawan Kumar Sharma
import BaseLayout from "../layouts/BaseLayout.astro";
import Seo from "../components/Seo.astro";
import contact from "../data/contact.json"; // Same format as before
---

<BaseLayout title="Contact AskDevPK |Get in touch with Pawan Kumar Sharma" description="Get in touch with Pawan Kumar Sharma (AskDevPK) for hiring, MERN stack freelance projects, or job opportunities. Available for remote work.">
  <Seo title="Contact AskDevPK |Get in touch with Pawan Kumar Sharma" description="Get in touch with Pawan Kumar Sharma (AskDevPK) for hiring, MERN stack freelance projects, or job opportunities. Available for remote work." />

  <section class="py-12 px-6 bg-slate-50 dark:bg-gray-900">
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-10 bg-white dark:bg-gray-800 shadow-lg rounded-xl p-8">

      <!-- Left: Profile & Contact Info -->
      <div class="flex flex-col justify-start">
        <img 
          src="/contact.jpg" 
          alt="Pawan Sharma - Full Stack Developer Profile Picture" 
          class="w-40 h-40 rounded-full object-cover border-4 border-indigo-600 mb-6"
        />
        <h2 class="text-3xl font-bold mb-2 text-indigo-600 dark:text-indigo-400">Let’s Collaborate!</h2>
        <p class="text-slate-600 dark:text-slate-300 mb-6">
          Whether you have a project idea, want to discuss opportunities, or just wish to say hello — I’m all ears.
        </p>

        <div class="space-y-3 text-slate-700 dark:text-slate-300">
          <p><strong>Email:</strong> 
            <a href={`mailto:${contact.email}`} class="text-indigo-600 dark:text-indigo-400 hover:underline">{contact.email}</a>
          </p>
          <p><strong>Website:</strong> 
            <a href={contact.website} target="_blank" class="text-indigo-600 dark:text-indigo-400 hover:underline">{contact.website}</a>
          </p>
        </div>

        <div class="flex gap-4 mt-4">
          {contact.socials.map(social => (
            <a href={social.url} target="_blank" class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-200 transition">
              <span>{social.platform}</span>
            </a>
          ))}
        </div>
      </div>

      <!-- Right: Feedback Form -->
      <div>
        <form 
          action="https://formsubmit.co/itspk_sharma@outlook.com" 
          method="POST" 
          class="space-y-4"
        >
          <input 
            type="text" 
            name="name" 
            placeholder="Your Name" 
            required
            class="w-full border border-gray-300 dark:border-gray-700 rounded-lg p-3 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <input 
            type="email" 
            name="email" 
            placeholder="Your Email" 
            required
            class="w-full border border-gray-300 dark:border-gray-700 rounded-lg p-3 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <textarea 
            name="message" 
            placeholder="Your Message" 
            rows="4" 
            required
            class="w-full border border-gray-300 dark:border-gray-700 rounded-lg p-3 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          ></textarea>

          <button 
            type="submit" 
            class="w-full bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700 transition"
          >
            Send Message
          </button>
        </form>
        <p class="text-xs text-gray-500 dark:text-gray-400 text-center mt-4">
          Your information stays safe with me — no spam, just genuine replies.
        </p>
      </div>

    </div>
  </section>
</BaseLayout>
